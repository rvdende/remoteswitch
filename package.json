{
  "name": "remoteswitch",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:1-generate": "prisma generate",
    "build:2-migrate": "prisma migrate deploy",
    "build:3-next": "cross-env NODE_ENV=production next build",
    "build:4-server": "tsc --project tsconfig.server.json",
    "build": "run-s build:*",
    "generate-sqlite": "prisma generate --schema=./prisma/_sqlite/schema.prisma",
    "migrate-sqlite": "prisma migrate dev --name init --schema=./prisma/_sqlite/schema.prisma",
    "build-sqlite": "run-s generate-sqlite migrate-sqlite build:4-server && next build",
    "dev:wss": "cross-env PORT=3001 tsx watch src/server/wssDevServer.ts --tsconfig tsconfig.server.json ",
    "dev:next": "next dev",
    "dev": "run-p dev:*",
    "dev-sqlite": "run-s generate-sqlite migrate-sqlite && run-p dev:*",
    "db-up": "docker-compose up -d",
    "db-seed": "prisma db seed",
    "db-migrate-dev": "prisma migrate dev",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "dx": "run-s db-up db-migrate-dev db-seed dev",
    "dev-nuke": "rm -rf prisma/*.db**",
    "generate": "prisma generate",
    "migrate-dev": "prisma migrate dev",
    "migrate": "prisma migrate deploy",
    "start": "cross-env NODE_ENV=production node dist/server/prodServer.js",
    "studio": "prisma studio",
    "lint": "eslint src",
    "lint-fix": "pnpm lint --fix",
    "test-dev": "cross-env APP_ENV=test start-server-and-test dev-sqlite 3000 test",
    "test-start": "cross-env APP_ENV=test WS_URL=ws://localhost:3000 start-server-and-test start 3000 test",
    "test": "playwright test",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@formkit/auto-animate": "1.0.0-beta.5",
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^2.0.13",
    "@next-auth/prisma-adapter": "^1.0.4",
    "@prisma/client": "^4.5.0",
    "@tanstack/react-query": "^4.16.0",
    "@trpc/client": "^10.4.3",
    "@trpc/next": "^10.4.3",
    "@trpc/react-query": "^10.4.3",
    "@trpc/server": "^10.4.3",
    "@types/bcrypt": "^5.0.0",
    "@types/lodash": "^4.14.190",
    "@types/node-fetch": "^2.6.2",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.3",
    "bcrypt": "^5.1.0",
    "classnames": "^2.3.2",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mqtt-packet": "^8.1.2",
    "next": "13.0.5",
    "next-auth": "^4.15.1",
    "next-themes": "^0.2.1",
    "node-fetch": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.39.7",
    "superjson": "1.9.1",
    "tsx": "^3.12.1",
    "uuid": "^9.0.0",
    "ws": "^8.11.0",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.26.0",
    "eslint-config-next": "13.0.2",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prisma": "^4.5.0",
    "tailwindcss": "^3.2.0",
    "typescript": "^4.8.4"
  },
  "ct3aMetadata": {
    "initVersion": "6.10.3"
  }
}
