{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "commonjs",
      "outDir": "dist",
      "target": "ESNext",
      "lib": ["ES2019", "DOM"],
      "isolatedModules": false,
      "noEmit": false,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
      }
    },
    "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["tests"]
  }